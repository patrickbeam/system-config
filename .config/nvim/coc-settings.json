{
  "languageserver": {
    "golang": {
      "command": "~/workspace/go/bin/gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "yaml.schemas": {
         "kubernetes": "/*.yaml"
    },
    "terraform": {
      "command": "~/workspace/go/bin/terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "go": {
      "disable": {
        "workspaceFolders": false
      }  
    }
}
